<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--STYLE FOR THE SEPARATOR VIEWS-->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c9c9c9</item>
    </style>
    <!--STYLE FOR DETAILED VIEWS IMAGE-->
    <style name="detailed_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/DETAILED_HEIGHT</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!--STYLE FOR DETAILED VIEWS NAME-->
    <style name="detailed_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/DETAILED_NAME</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/PADDING</item>
    </style>
    <!--STYLE FOR DETAILED VIEW DESCRIPTION-->
    <style name="detailed_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/PADDING</item>
    </style>
    <!--STYLE FOR DETAILED VIEW ADDRESS INFO-->
    <style name="detailed_address">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/PADDING</item>
    </style>
    <!--STYLE FOR DETAILED LOCATION ICON-->
    <style name="detailed_location">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--STYLE FOR LISTVIEW-->
    <style name="listview">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#f2f2f2</item>
    </style>
</resources>
